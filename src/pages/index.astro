</Layout>

<style>
  :root {
    /* text-align: center; */
  }
  header {
    background-color: var(--color-red);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .site {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 40px 1fr 80px;
    min-height: 100%;
    background-color: var(--color-blue);
  }

  main {
    padding: 2rem 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
    max-width: 60ch;
    align-items: center;
  }

  footer {
    height: 100px;
    /* border-top: 1px solid #eaeaea; */
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--color-yellow);
  }

  footer img {
    width: 20px;
  }

  .logo-linked-in {
    width: 28px;
    height: 28px;
    margin: 0 10px;
  }

  /* //hover */
  .logo-linked-in:hover {
    cursor: pointer;
  }

  .logo-linked-in:hover .logo-linked-in-svg {
    fill: var(--color-blue);
    padding-top: -10px;
    transition: padding 0.2s ease-in-out;
  }

  .logo-linked-in-svg {
    fill: var(--color-text);
    padding-top: 0px;
  }

</style>
