---
export interface Props {
  title: string;
}

import '@fontsource/eb-garamond';

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <meta
      name="description"
      content="Romain Capelle is a US-based business-focused Senior Front-End Developer at The Stable part of Accenture. He focuses on building pixel-perfect fast Shopify Plus storefront using modern solutions. Romain is well-versed in all aspect of web development: he previsouly worked as a webdesigner in New York City and Berlin, as well as a freelance building successful ecommerce sites during 5 years in Paris."
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  body {
    font-family: 'EB Garamond', serif;
  }

  html,
  body {
    width: 100%;
    height: 100%;
  }

  :root {
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
    --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
    --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

    --color-black: hsl(0, 0%, 0%);
    --color-white: hsl(255, 100%, 100%);
    --color-text: hsl(255, 100%, 100%);
    --color-blue: hsl(233, 74%, 45%);
    --color-red: hsl(2, 97%, 53%);
    --color-yellow: hsl(47, 100%, 50%);
  }

  body::-webkit-scrollbar {
    width: 0.6em;
  }

  body::-webkit-scrollbar-track {
    box-shadow: inset 0 0 6px var(--color-blue);
  }

  body::-webkit-scrollbar-thumb {
    background-color: var(--color-yellow);
  }

  html {
    font-family: 'EB Garamond', serif;
    font-size: var(--font-size-base);
    color: var(--color-text);

    background-color: var(--color-blue);
    opacity: 0.8;
    /* background-image: linear-gradient(90deg, var(--color-blue) 33%, var(--color-red) 33%, var(--color-yellow) 33%);
      background:linear-gradient(to right, var(--color-blue) 0, var(--color-blue) 33%, var(--color-red) 33%, var(--color-red) 66%, var(--color-yellow) 66%, var(--color-yellow) 100%); */
    background-color: var(--color-black);
    background-size: 100%;
  }

  body {
    margin: 0;
  }

  :global(h1) {
    font-size: var(--font-size-xl);
  }

  :global(h2) {
    font-size: var(--font-size-lg);
  }

  :global(code) {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
